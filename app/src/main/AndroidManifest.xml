<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ticonsys.kidscontent">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ticonsys.kidscontent.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ticonsys.kidscontent.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ticonsys.kidscontent.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.ticonsys.kidscontent.activity.KidsContentActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ticonsys.kidscontent.activity.VideoViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.ticonsys.kidscontent.activity.AboutUsActivity"
            android:label="@string/activity_title_about_us" />

        <activity
            android:name="com.ticonsys.kidscontent.activity.PrivacyPolicyActivity"
            android:label="@string/activity_title_privacy_policy" />

        <activity
            android:name="com.thefinestartist.ytpa.YouTubePlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

        <meta-data
            android:name="com.thefinestartist.ytpa.YouTubePlayerActivity.ApiKey"
            android:value="AIzaSyDGi5C9X2pxbVqvWX8rzdZ2TeOOAZDXIOM" />

    </application>

</manifest>